<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Traoùvé</title>
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

</head>
<body>

<div class="fixed-top d-flex flex-column flex-md-row align-items-center p-3 px-md-4 bg-white border-bottom shadow-sm">
    <h5 class="my-0 mr-md-auto font-weight-normal">
        <span class="fa-stack fa-lg text-primary">
          <i class="fa fa-square fa-stack-2x"></i>
          <i class="fa fa-search fa-stack-1x fa-inverse"></i>
        </span>
        Traoùvé
    </h5>
    <nav class="my-2 my-md-0 mr-md-3">
        <a class="p-2 text-dark" href="{{ path('homepage') }}">Accueil</a>
        <a class="p-2 text-dark" href="{{ path('traobject_create') }}">Déposer une annonce</a>
        <a class="p-2 text-dark" href="{{ path('lostobject') }}">Objets perdus</a>
        <a class="p-2 text-dark" href="{{ path('foundobjet') }}">Objets trouvés</a>
    </nav>

    <ul class="navbar-nav">
        <li class="nav-item dropdown">
            <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown" role="button"
               aria-haspopup="true" aria-expanded="false">
                            <span class="fa-stack">
                                <i class="fa fa-circle fa-stack-2x"></i>
                                <i class="fa fa-user fa-stack-1x"></i>
                            </span>
                {% if app.user %}
                    {{ app.user.email }}
                {% else %}
                    Mon compte
                {% endif %}
                <span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
                {% if app.user %}
                    <li>
                        <a class="dropdown-item" href="{{ path('app_logout') }}">
                            <i class="fa fa-sign-in"></i>
                            Se déconnecter
                        </a>
                    </li>

                {% else %}
                    <li>
                        <a class="dropdown-item" href="{{ path('app_login') }}">
                            <i class="fa fa-sign-in"></i>
                            Se connecter
                        </a>
                    </li>
                    <li>
                        <a class="dropdown-item" href="{{ path('user_registration') }}">
                            <i class="fa fa-user-plus"></i>
                            Créer un compte
                        </a>
                    </li>
                {% endif %}
            </ul>
        </li>
    </ul>
</div>
<main class="main-content">
    {% block body %} {% endblock %}

</main>

<div class="container">
    <footer class="pt-4 my-md-5 pt-md-5 border-top">
        <div class="row">
            <div class="col-12 col-md">
                <h5 class="my-0 mr-md-auto font-weight-normal">
                    <span class="fa-stack fa-lg text-primary">
                      <i class="fa fa-square fa-stack-2x"></i>
                      <i class="fa fa-search fa-stack-1x fa-inverse"></i>
                    </span>
                    Traoùvé
                </h5>
                <small class="d-block mb-3 text-muted">&copy; 2017-2018</small>
            </div>
            <div class="col-6 col-md">
                <h5>Catégories</h5>
                <ul class="list-unstyled text-small">
                    <li><a class="text-muted" href="#">Clés</a></li>
                    <li><a class="text-muted" href="#">Portefeuille</a></li>
                    <li><a class="text-muted" href="#">Jouet</a></li>
                    <li><a class="text-muted" href="#">Animaux</a></li>
                    <li><a class="text-muted" href="#">Electroniques</a></li>
                    <li><a class="text-muted" href="#">Vêtements</a></li>
                </ul>
            </div>
            <div class="col-6 col-md">
                <h5>Villes</h5>
                <ul class="list-unstyled text-small">
                    <li><a class="text-muted" href="#">Rennes</a></li>
                    <li><a class="text-muted" href="#">Brest</a></li>
                    <li><a class="text-muted" href="#">Vannes</a></li>
                    <li><a class="text-muted" href="#">St Malo</a></li>
                </ul>
            </div>
            <div class="col-6 col-md">
                <h5>Notre entreprise</h5>
                <ul class="list-unstyled text-small">
                    <li><a class="text-muted" href="#">Equipe</a></li>
                    <li><a class="text-muted" href="#">Contact</a></li>
                    <li><a class="text-muted" href="#">Mentions légales</a></li>
                </ul>
            </div>
        </div>
    </footer>
</div>

{#<script src="main.js"></script>#}
{% block javascripts %}

    {{ encore_entry_script_tags('app') }}


{% endblock %}

</body>
</html>